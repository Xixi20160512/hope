//@see: https://github.com/zeit/next.js/blob/canary/examples/custom-server-typescript/tsconfig.server.json
//@see: https://www.typescriptlang.org/v2/en/tsconfig/
{
  "extends": "./src/nextRoot/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "esnext",
    "isolatedModules": false,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
