{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "checkJs": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "allowJs": true,
    "pretty": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
