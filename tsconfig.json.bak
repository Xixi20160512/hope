{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "checkJs": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "allowJs": false,
    "pretty": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
